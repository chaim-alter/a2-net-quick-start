{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"noEmitOnError": false,
		"rootDir":"app" 
	},
	"exclude": [
		"node_modules",
		"wwwroot",
		"wwwroot/node_modules",
		"wwwroot/libs",
		"libs",
		//"wwwroot/typings",
		//"typings",
		"wwwroot/node_modules/@types/angular/angular-mocks.d.ts",
		"node_modules/@types/angular/angular-mocks.d.ts",
		"wwwroot/e2e",
		"e2e"
	]
}

